    <constant name="struts.devMode" value="true"/>
    <constant name="struts.i18n.encoding" value="UTF-8"/>
    <package name="default" namespace="/" extends="struts-default">
        
        <action name="welcome">
            <result>/jsp/welcome.jsp</result>
        </action>
        
        <action name="*_*" class="action.{1}Action" method="{2}">
            <result>/jsp/{1}_index.jsp</result>
            <!-- <result name="index">/jsp/{1}_index.jsp</result> -->
            <result name="error">/jsp/err/error.jsp</result>
            <result name="no_current_class">/jsp/err/{1}_noCurrentClass.jsp</result>
        </action>
        
    </package>
</struts>
